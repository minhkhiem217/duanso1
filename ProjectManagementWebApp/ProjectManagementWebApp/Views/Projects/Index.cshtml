@model IEnumerable<Project>

@{
    ViewData["Title"] = Localizer["Projects"];
}

<h1>@Localizer["Projects"]</h1>

<form class="my-3">
    <div class="form-row">
        <div class="col-12 col-lg-4">
            <div class="form-group">
                <select class="custom-select" name="orderBy" asp-items="@ViewBag.OrderBy">
                    <option value="">@Localizer["--Order By--"]</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="form-group">
                <select class="custom-select" name="type" asp-items="@ViewBag.TypeId">
                    <option value="">@Localizer["--Project Type--"]</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="form-group">
                <select class="custom-select" name="status" asp-items="@ViewBag.Status">
                    <option value="">@Localizer["--Status--"]</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="form-group">
                <select class="custom-select" name="semester" asp-items="@ViewBag.Semester">
                    <option value="">@Localizer["--Semester--"]</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="input-group">
                <input class="form-control" name="search" placeholder="@Localizer["Search"]" value="@ViewBag.Search" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">@Localizer["Search"]</button>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@item.Status.GetTableBackGroundColor()">
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-action="Schedules" asp-route-projectId="@item.Id">@Localizer["Schedules"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
